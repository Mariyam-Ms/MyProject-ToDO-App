<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignUpFragment">

    <ImageView
        android:id="@+id/navydesign"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:scaleType="fitXY"
        android:src="@drawable/design_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/inter_bold"
        android:text="Signup"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/navydesign" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_marginEnd="4dp"

        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/half_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402" />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navydesign">

    <EditText
        android:id="@+id/emailSignup"
        app:layout_constraintTop_toBottomOf="@id/navydesign"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="12dp"
        android:hint="Enter Your Email"
        android:background="@null"
        android:inputType="textEmailAddress||textNoSuggestions"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="84dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navydesign">

        <EditText
            android:id="@+id/passSignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="12dp"
            android:hint="Enter Password"
            app:layout_constraintTop_toBottomOf="@id/emailSignup"
            android:background="@null" />

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="148dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navydesign">

        <EditText
        android:id="@+id/ConfirmpassSignup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="12dp"
        android:hint="Conform Password"
        app:layout_constraintTop_toBottomOf="@id/emailSignup"
        android:background="@null" />

</androidx.cardview.widget.CardView>



    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/design_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Type Username"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/nextBtn"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:src="@drawable/next_btn"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>